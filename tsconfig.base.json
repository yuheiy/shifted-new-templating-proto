{
	"compilerOptions": {
		/* Basic Options */
		"incremental": true,
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"jsx": "react",
		/* Module Resolution Options */
		"moduleResolution": "node",
		"typeRoots": ["./typings", "./node_modules/@types"],
		"esModuleInterop": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
