{
	"compilerOptions": {
		/* Basic Options */
		"incremental": true,
		"target": "ESNext",
		"module": "CommonJS",
		"lib": ["ESNext", "DOM"],
		"jsx": "react",
		"sourceMap": true,
		/* Module Resolution Options */
		"esModuleInterop": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["config.ts", "src/**/*"]
}
